{
	"name": "@diaspora/plugin-server",
	"version": "0.1.0",
	"description": "A webserver module for Diaspora",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/diaspora-orm/plugin-server.git"
	},
	"bugs": {
		"url": "https://github.com/diaspora-orm/plugin-server/issues"
	},
	"homepage": "https://github.com/diaspora-orm/plugin-server#readme",
	"license": "GPL-3.0",
	"keywords": [
		"ORM",
		"Diaspora",
		"webserver",
		"API",
		"RESTFULL"
	],
	"main": "dist/diaspora-server.umd.js",
	"module": "dist/diaspora-server.es5.js",
	"typings": "dist/types/diaspora-server.d.ts",
	"files": [
		"dist"
	],
	"author": "Gerkin <nihilivin@gmail.com>",
	"engines": {
		"node": ">=7.0.0"
	},
	"scripts": {
		"lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
		"lint:fix": "tslint --fix -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
		"doc": "typedoc --out dist/docs --target es6 --theme minimal --mode file src",
		"prebuild": "rimraf dist",
		"build": "tsc --module commonjs --outDir dist/lib && rollup -c rollup.config.ts && npm run doc",
		"start": "rollup -c rollup.config.ts -w",
		"test": "jest --runInBand",
		"test:watch": "jest --watch --runInBand",
		"test:prod": "npm run lint && npm run test -- --coverage --no-cache",
		"deploy-docs": "ts-node tools/gh-pages-publish",
		"report-coverage": "cat ./coverage/lcov.info | coveralls",
		"commit": "git-cz",
		"semantic-release": "semantic-release pre && npm publish && semantic-release post",
		"semantic-release-prepare": "ts-node tools/semantic-release-prepare",
		"precommit": "lint-staged",
		"conventional-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
		"version": "npm run conventional-changelog && git add CHANGELOG.md",
		"prepack": "npm run build"
	},
	"lint-staged": {
		"{src,test}/**/*.ts": [
			"npm run lint:fix",
			"git add"
		]
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		},
		"validate-commit-msg": {
			"types": "conventional-commit-types",
			"helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
		}
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json"
		],
		"moduleDirectories": [
			"node_modules"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/test/"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 95,
				"lines": 95,
				"statements": 95
			}
		},
		"collectCoverage": true,
		"globals": {
			"ts-jest": {
				"tsConfigFile": "tsconfig.jest.json"
			}
		}
	},
	"devDependencies": {
		"@types/bluebird": "^3.5.21",
		"@types/body-parser": "^1.17.0",
		"@types/express": "^4.16.0",
		"@types/jest": "^23.1.4",
		"@types/lodash": "^4.14.110",
		"@types/minimatch": "^3.0.3",
		"@types/node": "^10.5.1",
		"bluebird": "^3.5.1",
		"colors": "^1.3.0",
		"commitizen": "^2.10.1",
		"coveralls": "^3.0.2",
		"cross-env": "^5.2.0",
		"cz-conventional-changelog": "^2.1.0",
		"express": "^4.16.3",
		"husky": "^0.14.3",
		"jest": "^23.2.0",
		"jest-html-reporter": "^2.4.1",
		"lint-staged": "^7.2.0",
		"lodash.camelcase": "^4.3.0",
		"prompt": "^1.0.0",
		"replace-in-file": "^3.4.0",
		"rimraf": "^2.6.2",
		"rollup": "^0.62.0",
		"rollup-plugin-commonjs": "^9.1.3",
		"rollup-plugin-json": "^3.0.0",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-node-resolve": "^3.3.0",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"rollup-plugin-typescript2": "^0.15.1",
		"semantic-release": "^15.6.2",
		"ts-jest": "^23.0.0",
		"ts-node": "^7.0.0",
		"tslint": "^5.10.0",
		"tslint-config-prettier": "^1.13.0",
		"tslint-config-standard": "^7.1.0",
		"typedoc": "^0.11.1",
		"typescript": "^2.9.2",
		"validate-commit-msg": "^2.14.0"
	},
	"dependencies": {
		"@diaspora/diaspora": "^0.3.0-alpha.9",
		"body-parser": "^1.18.3",
		"chalk": "^2.4.1",
		"jest-plugins-recommended": "^2.9.0",
		"lodash": "^4.17.10",
		"minimatch": "^3.0.4"
	},
	"peerDependencies": {
		"express": "^4.16.3",
		"@diaspora/diaspora": "^0.3.0-alpha.9"
	}
}
